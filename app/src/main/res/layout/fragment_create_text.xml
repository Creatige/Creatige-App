<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
     android:layout_width="match_parent"
    android:fillViewport="true"
    >
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.CreateTextFragment"
    >

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/ivGenerated"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/prompt_placeholder_img"
        />

    <EditText
        android:id="@+id/etPrompt"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/ivGenerated"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/prompt_input_border"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/enter_prompt"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:textColor="#E9E9E9" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/etPrompt"
       android:backgroundTint="#303030">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/advanced_options"
                android:textSize="24sp"
                android:layout_gravity="center|start"
                android:paddingStart="8dp"
                />
            <Button
                android:id="@+id/options_expand"
                android:background="@drawable/ic_baseline_arrow_downward_24"
                android:layout_gravity="end|center"
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/adv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_below="@id/card_view"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/negative_prompt"
                android:layout_marginEnd="8dp"/>
            <EditText
                android:id="@+id/et_neg_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/prompt_input_border"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seed"
                android:layout_marginEnd="82dp"/>
            <EditText
                android:id="@+id/et_seed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/prompt_input_border"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sampler"
                android:layout_marginEnd="61dp"/>
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/steps"
                android:layout_marginEnd="65dp"/>
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/steps_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="50"
                android:min="2"
                android:progress="15"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/width"
                android:layout_marginEnd="65dp"/>
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/width_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="16"
                android:min="1"
                android:progress="8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/height"
                android:layout_marginEnd="60dp"/>
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/height_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="16"
                android:min="1"
                android:progress="8"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guidance"
                android:layout_marginEnd="43dp"/>
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/guid_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="48"
                android:min="2"
                android:progress="14"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adv_list"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_centerInParent="true"
        android:text="@string/generate" />

</RelativeLayout>
</ScrollView>
